	mode dock
	#mode hide
	#hidden_state hide
	#modifier Mod4
		status_command i3status -c ~/.i3/i3status.conf

	colors {
        statusline      #E2DBD1
        background      #111A20

# class                         border          backgrd         text
        focused_workspace	#111A20         #111A20         #E2DBD1
        active_workspace	#111A20		#4D3941		#E2DBD1
        inactive_workspace	#111A20         #111A20         #4D3941
        urgent_workspace	#111A20         #111A20         #c7a551
   }

}

